{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "dependencyDashboard": true,
    "kubernetes": {
        "fileMatch": [
            "base/.*.yaml",
            "local/.*.yaml",
            "local-development/.*.yaml"
        ]
    },
    "kustomize": {
        "fileMatch": [
            "base/.*.yaml",
            "local/.*.yaml",
            "local-development/.*.yaml"
        ]
    },
    "packageRules": [
        {
            "matchDatasources": [
                "docker"
            ],
            "matchPackageNames": [
                "**/*-development"
            ],
            "groupName": "dev-images",
            "versioning": "regex:^v?(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)-(?<build>\\d+)-[\\d\\w]+$",
            "automerge": true
        },
        {
            "matchFileNames": [
                "base/.*.yaml"
            ],
            "groupName": "base-images"
        }
    ]
}